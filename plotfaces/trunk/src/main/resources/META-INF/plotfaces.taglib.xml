<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
				version="2.0">
	<namespace>http://www.plotfaces.org</namespace>
	
	<tag>
		<tag-name>lineChart</tag-name>
		<description><![CDATA[Draws a line chart.]]></description>
		<component>
			<component-type>org.plotfaces.line.LineChart</component-type>
			<renderer-type>org.plotfaces.line.LineChartRenderer</renderer-type>
		</component>
		<attribute>
			<description><![CDATA[Unique identifier for this component.]]></description>
			<name>id</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[Individual style information for the chart.]]></description>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[Class style information for the chart.]]></description>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[]]></description>
			<name>options</name>
			<required>false</required>
			<type>org.plotfaces.PlotOptions</type>
		</attribute>
		<!--<attribute>
			<description><![CDATA[A list of Axis objects describing how to draw the various axes displayed on the chart.]]></description>
			<name>axes</name>
			<required>false</required>
			<type>java.util.List</type>
		</attribute>
		<attribute>
			<description><![CDATA[]]></description>
			<name>seriesDefaults</name>
			<required>false</required>
			<type>org.plotfaces.Series</type>
		</attribute>-->
	</tag>
</facelet-taglib>

